# Frontend Environment Variables Example
# Copy this file to .env.local and update the values as needed

# Environment (production, staging, local, test)
NEXT_PUBLIC_ENVIRONMENT=production

# Production Environment Configuration
NEXT_PUBLIC_CONTRACT_ADDRESS=0x6e8152909F0e0f6bD7cbf3B8aE5E6a8aA5fA5198
NEXT_PUBLIC_WS_INDEXING=wss://testnet.riselabs.xyz/ws
NEXT_PUBLIC_CANVAS_SIZE=64

# Staging Environment Configuration
NEXT_PUBLIC_CONTRACT_ADDRESS_STAGING=0x0a8d0B15f68C49A8d3351F9D0e539375360D8e2D
NEXT_PUBLIC_WS_INDEXING_STAGING=wss://staging.riselabs.xyz/ws
NEXT_PUBLIC_CANVAS_SIZE_STAGING=32

# RPC URL for the blockchain network
RPC_URL=https://testnet.riselabs.xyz/

# Private key for the wallet that will send transactions
PRIVATE_KEY=0x1234567890abcdef...

# Contract address (optional, defaults to current deployed contract)
CONTRACT_ADDRESS=0xc7c14Cf3094A9Bb8770148DD18494944469Cc5D8